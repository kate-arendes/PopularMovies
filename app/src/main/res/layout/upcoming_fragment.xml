<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".UpcomingFragment"
    android:background="#121212"
    android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/tvUpcomingFragment"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/upcoming_movies"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/spUpcoming"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tvUpcomingFragment"
        android:background="@color/white"

        android:contentDescription="@string/hello_blank_fragment" />

    <ImageView
        android:id="@+id/ivUpcomingPhoto"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spUpcoming"
        android:contentDescription="@string/upcoming_movie_poster" />

    <ProgressBar
        android:id="@+id/pbUpcomingProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:scaleY="4"
        android:indeterminateBehavior="repeat"
        android:indeterminate="true"
        />

</RelativeLayout>